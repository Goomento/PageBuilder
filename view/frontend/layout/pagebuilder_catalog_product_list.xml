<?xml version="1.0"?>
<!--
/**
 * @package Goomento_PageBuilder
 * @link https://github.com/Goomento/PageBuilder
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <block name="pagebuilder.products.list"
               class="Goomento\PageBuilder\Block\Widgets\Product\ListProduct"
               as="product_list"
               template="Goomento_PageBuilder::widgets/product/list.phtml">
            <container name="pagebuilder.product.list.additional" as="additional" />
            <block class="Magento\Framework\View\Element\RendererList" name="pagebuilder.product.type.details.renderers" as="details.renderers">
                <block class="Magento\Framework\View\Element\Template" name="pagebuilder.product.type.details.renderers.default" as="default"/>
            </block>
            <block class="Magento\Catalog\Block\Product\ProductList\Item\Container" name="pagebuilder.product.addto" as="addto">
                <block class="Magento\Catalog\Block\Product\ProductList\Item\AddTo\Compare"
                       name="pagebuilder.product.addto.compare" as="compare"
                       template="Magento_Catalog::product/list/addto/compare.phtml"/>
            </block>
        </block>
    </body>
</page>
