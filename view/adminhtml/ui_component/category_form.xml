<?xml version="1.0" encoding="UTF-8"?>
<!--
/**
 * @package Goomento_PageBuilder
 * @link https://github.com/Goomento/PageBuilder
 */
-->
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <settings>
        <buttons>
            <button name="pageBuilder" class="Goomento\PageBuilder\Block\Adminhtml\Catalog\Category\LiveEditorButton"/>
        </buttons>
    </settings>
    <fieldset name="pageBuilder" sortOrder="9">
        <settings>
            <collapsible>true</collapsible>
            <label translate="true">Page Builder</label>
        </settings>
        <field name="pagebuilder_is_active" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">category</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>boolean</dataType>
                <label translate="true">Active</label>
                <dataScope>pagebuilder_is_active</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">0</map>
                            <map name="true" xsi:type="string">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="pagebuilder_content_id" formElement="select" sortOrder="20">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">category</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Content</label>
                <dataScope>pagebuilder_content_id</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Goomento\PageBuilder\Model\Config\Source\BuildableContent"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>
