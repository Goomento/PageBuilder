<?xml version="1.0" encoding="UTF-8"?>
<!--
/**
 * @package Goomento_PageBuilder
 * @link https://github.com/Goomento/PageBuilder
 */
-->
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <settings>
        <buttons>
            <button name="live_editor" class="Goomento\PageBuilder\Block\Adminhtml\Cms\Page\LiveEditorButton"/>
        </buttons>
    </settings>
    <fieldset name="general">
        <field name="pagebuilder_is_active" sortOrder="15" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable PageBuilder</label>
                <dataScope>pagebuilder_is_active</dataScope>
                <tooltip>
                    <description>Display PageBuilder content instead.</description>
                </tooltip>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="pagebuilder" sortOrder="5">
        <settings>
            <collapsible>true</collapsible>
            <label translate="true">Page Builder</label>
        </settings>
        <field name="pagebuilder_content_id" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Content</label>
                <dataScope>pagebuilder_content_id</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Goomento\PageBuilder\Model\Content\Source\Pages"/>
                        <caption translate="true">-- Please Select --</caption>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>
